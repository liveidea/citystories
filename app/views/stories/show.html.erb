<%= javascript_include_tag "http://api-maps.yandex.ru/2.0/?load=package.full&lang=ru-RU" %>


<%= javascript_tag do %>
  window.storyTitle = '<%= j @story.title %>';
  window.storyAddress ='<%= j @story.adress %>'
<% end %>


<%= javascript_include_tag "mapshow" %>
  



<h1> Show </h1>
<%= link_to "follow", follow_story_story_path, method: :post %>
<%= link_to "unfollow",  unfollow_story_story_path, method: :delete %>
<%= link_to "add update", new_story_story_update_path(@story.id) %>
<h4>Title</h4>
<p>
  <%= @story.title %>
</p>
<h4> Address</h4>
<p>
  <%= @story.adress %>
</p>
<% @story.story_updates.each do |update| %>
  <%= image_tag update.photo_url (:thumb) if update.photo?%>
  <h3> Description </h3>
  <p>  <%= update.description %> </p>
<%end%>
<div class="col-md-10 col-md-offset-1"> 
  <div id="YMapsID">

  </div>
  <br>
</div>
