<h1>Stories</h1>
<span class="glyphicon glyphicon-star">
<%= link_to "add story", new_story_path %>
</span>
<a class="btn btn-large" href="#"><i class="icon-star"></i> Star</a>
<% @stories.each do |story| %>
  <p> <i class="glyphicon glyphicon-star"><h4>Title</h4></i> <%= story.title %></p>
  <p> <h4>Adress</h4> <%= story.adress %></p>
  <%= link_to "Show", story_path(story) %>
  <%= link_to "Edit", edit_story_path(story) if current_user == story.user %>
  <%= link_to "Destroy", story, method: :delete, data: { confirm: 'Are you sure?' } if current_user == story.user %>
<%end%>
<br>
<h1>END</h1>
